<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectA7thGradeTopic">

    <TextView
        android:id="@+id/choice7class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        android:text="@string/choice7class_text"
        app:layout_constraintBottom_toTopOf="@id/formula_7_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/formula_7_class"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="@string/formula_7_class_text"
        android:onClick="goFormulas7class"
        app:layout_constraintBottom_toTopOf="@id/laws_of_physics7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice7class" />

    <Button
        android:id="@+id/laws_of_physics7"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="@string/laws_of_physics_text7"
        app:layout_constraintBottom_toTopOf="@id/back7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formula_7_class" />


    <Button
        android:id="@+id/back7"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginBottom="300dp"
        android:onClick="backMain7"
        android:text="@string/back7text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/laws_of_physics7" />
</androidx.constraintlayout.widget.ConstraintLayout>