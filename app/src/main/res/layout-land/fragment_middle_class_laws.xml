<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/seven_class"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:text="@string/class_7"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/eighth_class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eighth_class"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:text="@string/class_8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ninth_class"
        app:layout_constraintStart_toEndOf="@id/seven_class"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ninth_class"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:text="@string/class_9"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/eighth_class"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
